# Redis Configuration for Production (Coolify)
REDIS_URL=redis://redis:6379

# Or if using external Redis service:
# REDIS_URL=redis://username:password@your-redis-host:6379

# Node Environment
NODE_ENV=production

# Optional: Performance tuning
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=2000

# Rate limiting (more strict in production)
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=20

# Cache TTL (in seconds)
CACHE_TTL_DEFAULT=7200      # 2 hours
CACHE_TTL_STATS=600         # 10 minutes
CACHE_TTL_SESSION=172800    # 2 days